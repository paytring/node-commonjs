# Paytring API Configuration
# Copy this file to .env and fill in your actual credentials

# Test Environment (for development and testing)
PAYTRING_API_KEY=test_your_api_key_here
PAYTRING_API_SECRET=your_test_api_secret_here

# Production Environment (uncomment when ready for production)
# PAYTRING_API_KEY=prod_your_production_api_key_here
# PAYTRING_API_SECRET=your_production_api_secret_here

# Optional: Set environment mode
NODE_ENV=development

# Example values for testing
TEST_CUSTOMER_NAME=John Doe
TEST_CUSTOMER_EMAIL=john.doe@example.com
TEST_CUSTOMER_PHONE=9876543210
TEST_AMOUNT=1000
TEST_CALLBACK_URL=https://your-website.com/payment/callback

# Webhook verification (use the same secret as API_SECRET)
WEBHOOK_SECRET=your_api_secret_here
